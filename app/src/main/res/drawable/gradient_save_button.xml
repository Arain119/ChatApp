<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="30dp" />
            <gradient
                android:startColor="#1A7F4E"
                android:endColor="#166F45"
                android:angle="135"/>
            <stroke
                android:width="2dp"
                android:color="#30FFFFFF" />
        </shape>
    </item>
    <!-- 默认状态 -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="30dp" />
            <gradient
                android:startColor="#27AE60"
                android:endColor="#2E9C6F"
                android:angle="135"/>
            <stroke
                android:width="1dp"
                android:color="#50FFFFFF" />
        </shape>
    </item>
</selector>